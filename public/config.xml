<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.game9ja.www"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only - increase for every release - refer to https://developer.android.com/studio/publish/versioning.html -->

    <name>Game9ja</name>

    <description>
        An app for playing online games
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com"><!-- TODO: modify the href and email later in final release-->
        Chuks Alimele
    </author>
	
	<content src="index.html"/>
	
    <plugin name="cordova-plugin-whitelist" spec="1"/>
	
    <access origin="*"  subdomains="true"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    
    
</widget>